<Label>:
    color: 0.3, 0.3, 0.7, 1
    multiline: False
    write_tab: False
    
<CreateAccountWindow>:
    name: "create"

    username: username
    password: password
    email: email

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Create an Account"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Name: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                id: username
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13}
                text: "Email: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                id: email
                pos_hint: {"x":0.5, "top":0.8-0.13}
                size_hint: 0.4, 0.12
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8-0.13*2}
                text: "Password: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                id: password
                pos_hint: {"x":0.5, "top":0.8-0.13*2}
                size_hint: 0.4, 0.12
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            pos_hint:{"x":0.3,"y":0.25}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Already an account? Log In"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.15
            text: "Submit"
            font_size: (root.width**2 + root.height**2) / 13**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()


<LoginWindow>:
    name: "login"
    
    email: email
    password: password

    FloatLayout:

        Label:
            text:"Email: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.35, 0.15

        TextInput:
            id: email
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            write_tab: False
            pos_hint: {"x": 0.45 , "top":0.9}
            size_hint: 0.4, 0.15

        Label:
            text:"Password: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.35, 0.15

        TextInput:
            id: password
            font_size: (root.width**2 + root.height**2) / 13**4
            password: True
            pos_hint: {"x": 0.45, "top":0.7}
            size_hint: 0.4, 0.15

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Button:
            pos_hint:{"x":0.3,"y":0.3}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 14**4
            text: "No Account? Create One"
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()

<SetupGoalWindow>:
    name:'setupgoal'

    push_up:push_up
    push_up_time:push_up_time
    pull_up:pull_up
    pull_up_time:pull_up_time
    abdo:abdo
    abdo_time:abdo_time
    squat:squat
    squat_time:squat_time

    # first layout: goals and goals time label 
    FloatLayout:
        cols:1
        FloatLayout:
            cols:4
            size: root.width, root.height/2

            # PUSH UP
            Label:
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint:{'x': 0, 'top':0.95}
                size_hint:0.25, 0.2
                text: 'Push Up'

            TextInput:
                id: push_up
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint: {'x': 0 , 'top':0.8}
                size_hint: 0.25, 0.1

            Button:
                id:push_up_time
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint:{'x': 0, 'top':0.7}
                size_hint:0.25, 0.1
                text:'Goal End'
                on_press: root.show_date_push_up()

            # PULL UP
            Label:
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint:{'x': 0.25, 'top':0.95}
                size_hint:0.25, 0.2
                text: 'Pull Up'

            TextInput:
                id: pull_up
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint: {'x': 0.25 , 'top':0.8}
                size_hint: 0.25, 0.1

            Button:
                id:pull_up_time
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint:{'x': 0.25, 'top':0.7}
                size_hint:0.25, 0.1
                text:'Goal End'
                on_press: root.show_date_pull_up()
         
            # ABDO
            Label:
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint:{'x': 0.5, 'top':0.95}
                size_hint:0.25, 0.2
                text: 'Abdo'

            TextInput:
                id: abdo
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint: {'x': 0.5 , 'top':0.8}
                size_hint: 0.25, 0.1

            Button:
                id:abdo_time
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint:{'x': 0.5, 'top':0.7}
                size_hint:0.25, 0.1
                text:'Goal End'
                on_press: root.show_date_abdo()

            # SQUAT
            Label:
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint:{'x': 0.75, 'top':0.95}
                size_hint:0.25, 0.2
                text: 'Squat'

            TextInput:
                id: squat
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint: {'x': 0.75, 'top':0.8}
                size_hint: 0.25, 0.1

            Button:
                id:squat_time
                font_size: (root.width**2 + root.height**2) / 13**4
                pos_hint:{'x': 0.75, 'top':0.7}
                size_hint:0.25, 0.1
                text:'Goal End'
                on_press: root.show_date_squat()


        Button:
            pos_hint:{"x":0.3, "y": 0.25}
            size_hint: 0.5, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Confirm Goal"
            on_release:
                root.manager.transition.direction = "right"
                root.goalBtn()

        FloatLayout:
            Button:
                pos_hint:{"x":0.05, "y": 0.05}
                size_hint:0.1, 0.1
                font_size: (root.width**2 + root.height**2) / 14**4
                text: "Logout"
                on_release:
                    app.root.current = "login"
                    root.manager.transition.direction = "down"

